{
    "version": 3,
    "configurePresets": [
        {
            "name": "debug",
            "displayName": "Debug",
            "description": "Debug configure of the project",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/Debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "BUILD_TESTING": "ON",
                "BUILD_BINARIES": "ON",
                "BUILD_BENCHMARKS": "ON"
            }
        },
        {
            "name": "release",
            "displayName": "Release",
            "description": "Release configure of the project",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/Release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "BUILD_BINARIES": "ON",
                "BUILD_BENCHMARKS": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "displayName": "Debug",
            "description": "Debug build of the project",
            "configurePreset": "debug"
        },
        {
            "name": "release",
            "displayName": "Release",
            "description": "Release build of the project",
            "configurePreset": "release"
        }
    ],
    "testPresets": [
        {
            "name": "debug",
            "configurePreset": "debug",
            "output": {
                "outputOnFailure": true
            }
        }
    ]
}